<%= link_to "Back", :back %>
<div class="charity-cards-box">

  <div class="charity-card-header">
    <div class="charity-card-infos">
      <h4><%= @charity.name%></h4>
      <p>Our mission: <%= @charity.description %></p>
      <p>Category: <%= @charity.category %></p>
      <p>📍 <%= @charity.location %></p>
      <%= link_to "Contact charity", "#" %>
    </div>
    <div>
      <% if @charity.photo.attached?%>
        <%= cl_image_tag @charity.photo.key, class: "charity-card-img"%>
      <% else %>
        <%= image_tag "https://source.unsplash.com/random/?charity=#{rand(1..10)}", class: "charity-card-img"%>
      <% end %>
    </div>
  </div>
  <div class="charity-card-needs">
    <h3>We need:</h3>
    <% @charity.needs.each do |need| %>
      <p><strong><%= need.title %></strong></p>
      <p>Description: <%= need.description %></p>
      <p>Category: <%= need.category %></p>
      <p>Get <%= need.karma_points %> Karma points</p>
      <p>Need status:<%= need.status %></p>
      <%= link_to "Claim", new_need_good_action_path(need.id)%>
    <% end %>
  </div>
</div>
