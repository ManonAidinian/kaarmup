
  <div class="container">

    <div class="charity-dash-header row">
      <div class="charity-dash-infos col-md-6">
        <h4><%= current_user.charity.name%></h4>
        <p>Our mission: <%= current_user.charity.description %></p>
        <p>üìç <%= current_user.charity.location %></p>
        <p><%= link_to "Edit charity", edit_charity_path(current_user.charity.id) %></p>
        <p><%= link_to "Delete charity", charity_path(current_user.charity.id), method: :delete, data: { confirm: "Are you sure?" }%></p>
      </div>
      <div class= "col-md-6">
        <% if current_user.charity.photos.attached?%>
          <%= cl_image_tag current_user.charity.photos.first.key, class: "charity-dash-img"%>
        <% else %>
          <%= image_tag "https://source.unsplash.com/random/?charity=#{rand(1..10)}", class: "charity-dash-img"%>
        <% end %>
      </div>
    </div>

    <div class="charity-dash-needs row">
      <h3>We need:</h3>
      <% current_user.charity.needs.each do |need| %>
        <div class="col-md-4">
          <p><strong><%= need.title %></strong></p>
          <p>Description: <%= need.description %></p>
        </div>
        <div class="col-md-4">
          <p>Category: #<%= need.category %></p>
          <p>Get <%= need.karma_points %> Karma points</p>
          <p>Need status: <%= need.status %></p>
          <% if need.good_actions.any? %>
            <% if need.status == "Claimed, waiting for approval" %>
              <p><%= link_to "Approve", good_action_path(need.good_actions.first), method: :patch %>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-4">
          <p><%= link_to "Edit", edit_need_path(need.id)%> |
          <%= link_to "Delete", need_path(need.id), method: :delete, data: { confirm: "Are you sure?" }%></p>
        </div>
      <% end %>
      <%= link_to "Add a need", new_charity_need_path(current_user.charity.id) %>
    </div>

  </div>
