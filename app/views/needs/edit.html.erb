<div class="container">

  <h2>Edit your need:</h2>
  <%= simple_form_for(@need) do |f| %>
      <%= f.input :title%>
      <%= f.input :description%>
      <%= f.input :category, collection: Need::NEED_CATEGORIES %>
      <%= f.input :karma_points%>
      <%= f.button :submit, "Update my need"%>
    <%end%>

</div>
