<div class="container">

  <h2>Submit a new need:</h2>
  <%= simple_form_for([@charity, @need]) do |f| %>
      <%= f.input :title%>
      <%= f.input :description%>
      <%= f.input :category, collection: Need::NEED_CATEGORIES %>
      <%= f.input :karma_points%>
      <%= f.button :submit, "Save my new need"%>
    <%end%>

</div>
