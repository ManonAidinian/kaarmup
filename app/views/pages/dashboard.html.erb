<div class="dashboard d-flex">

  <%= render "shared/sidebar" %>

  <div class="tabs-box">

    <% if current_user.user_type == "Company" && @onboarded %>
      <h3>My company:</h3>
      <%= render "companies/company_dashboard" %>

    <% elsif current_user.user_type == "Charity" && @onboarded %>
      <h3>My charity:</h3>
      <%= render "charities/charity_dashboard" %>


    <%else %>
      <h3>Register your <%= current_user.user_type %> to start connecting with like minded leaders!</h3>
      <% if current_user.user_type == "Company"%>
        <%= link_to "Register my company", new_company_path %>
      <% elsif current_user.user_type == "Charity"%>
        <%= link_to "Register my charity", new_charity_path %>
      <% end %>


    <% end %>


  </div>
</div>
